<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top half layer -->
    <item  android:width="15dp" android:top="0dp" android:bottom="0dp"  android:left="15dp" android:right="0dp" >
        <shape android:shape="rectangle" >
            <corners android:topRightRadius="15dp" android:bottomRightRadius="15dp"/>
            <solid android:color="@color/colorVoilet" />
        </shape>
    </item>
    <!-- Bottom half layer -->
    <item android:width="15dp" android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="15dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="15dp" android:bottomLeftRadius="15dp"/>
            <solid android:color="@color/colorGreen" />
        </shape>
    </item>
</layer-list>