<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CodeVerifyActivity">
    <ImageView
        android:id="@+id/codeVerifyBackButton"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        style="?android:borderlessButtonStyle"
        android:src="@drawable/back_arrow_vector_assets"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter 4-digit code"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Code"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="15dp" />

   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="- - - -"
       android:layout_marginLeft="21dp"
       android:background="@color/white"
       android:maxLength="4"
       android:layout_marginTop="5dp"
       android:textCursorDrawable="@null"
       android:textColor="@color/black"
       android:inputType="number"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/lightGray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/resendNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend Code"
            android:textSize="21sp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:paddingBottom="10dp"
            android:visibility="visible"

            android:paddingTop="10dp"/>

        <ImageView
            android:id="@+id/otpVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/circle_button"
            android:layout_marginRight="20dp"
            android:src="@drawable/right_arrow"/>

    </LinearLayout>
    <TextView
        android:id="@+id/timer"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#f70000"
       />
</LinearLayout>